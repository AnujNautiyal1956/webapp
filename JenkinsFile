pipeline {
  agent any 
    tools {
      maven "Maven"
    }
   stages {
    stage ("Initialize"){
      steps {
        sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
            ''' 
      }
    }
   stage ("Build"){
    steps {
      sh 'mvn clean package'
   }
   } 
   stage ("Deply to Tomcat"){
    steps {
      sshagent(['tomcat']){
        sh 'scp -o StrictHostKeyChecking=no target/*.war ubuntu@52.50.191.114:/home/ubuntu/prod/apache-tomcat-8.5.66/webapps/webapp.war'
      }
     }
   }
  }
  
}

